<style>
    [x-cloak] {
        display: none;
    }
</style>

{% set navPages = collections.all | eleventyNavigation %}

<div x-cloak x-data class="z-20">
{#  TODO: Double check vertical padding classes #}
  <header class="flex justify-between items-center px-4 lg:px-8 lg:pt-4 pt-2 h-16 transition ease-in-out duration-200" :class="$store.menu.open ? 'filter blur-sm' : ''" x-cloak x-data>
    {% include "components/sitetitle.njk" %}
    {#  Desktop nav menu #}
    <nav class="hidden lg:flex space-x-1 lg:space-x-2 items-center" aria-label="primary">
      {%- for entry in navPages %}
        {% if not entry.hideOnDesktop %}
          {% if entry.cta %}
            <a href="{{ entry.url | url }}"
               class="inline lg:block px-2 py-1 text-center bg-white text-lg font-bold rounded text-black transition ease-in-out duration-300 hover:transform hover:-translate-y-1 focus:transform focus:-translate-y-1 selectable">{{ entry.title }}</a>
          {% else %}
            <a href="{{ entry.url | url }}" class="nav-link">{{ entry.title }}</a>
          {% endif %}
        {% endif %}
      {%- endfor %}
    </nav>
    <div class="items-center lg:hidden">
      <button class="flex gap-1 items-center font-bold text-xl text-white outline-none ease-in-out duration-300  focus:ring-2 focus:ring-white focus:ring-offset-slate-900 focus:outline-none focus:ring-offset-2 rounded"
              @click="$store.menu.openMenu()"
              x-data
      >
        <span class="sr-only">Open Navigation</span>
        Menu
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
        </svg>
      </button>
    </div>
  </header>

  {#  Medium nav menu with overlay and modal only on small and medium screens #}
  <div class="fixed top-0 left-0 z-50 bg-slate-500 bg-opacity-70 w-screen h-screen hidden xs:flex items-center justify-center lg:hidden"
       x-show="$store.menu.open"
       x-data
       x-transition:enter="transition ease-out duration-200"
       x-transition:enter-start="opacity-0"
       x-transition:enter-end="opacity-100"
       x-transition:leave="transition ease-in duration-100"
       x-transition:leave-start="opacity-100"
       x-transition:leave-end="opacity-0"

  >
    <div class="bg-slate-900 rounded p-8 w-72 shadow-lg text-white relative"
         x-show="$store.menu.open"
         x-data
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="scale-90 opacity-0"
         x-transition:enter-end="scale-100 opacity-100"
         x-transition:leave="transition ease-in duration-100"
         x-transition:leave-start="scale-100 opacity-100"
         x-transition:leave-end="scale-90 opacity-0"
    >
      <div class="absolute bottom-0 left-0 w-full z-40 rounded-br rounded-bl overflow-hidden" aria-hidden="true">
        {% include "waves/blue_bottom_waves_vertical1.njk" %}
      </div>
      <div class="flex justify-between items-center z-50 relative">
        <div class="text-2xl font-bold">Menu</div>
        <button class="border-2 border-white rounded" @click="$store.menu.closeMenu()" x-data>
          <span class="sr-only">Close Navigation</span>
          {#        framed x button #}
          <svg xmlns="http://www.w3.org/2000/svg"
               aria-hidden="true"
               class="h-6 w-6"
               fill="none"
               viewBox="0 0 24 24"
               stroke="currentColor"
               stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

      </div>
      <nav class="grid grid-cols-1 gap-y-6 w-full mx-auto mt-8 z-50 relative" aria-label="primary">
        {%- for entry in navPages %}
          {% if not entry.hideOnMobile %}
            {% if entry.cta %}
              <a href="{{ entry.url | url }}"
                 class="inline lg:block px-2 py-1 text-center bg-white text-lg font-bold rounded text-black transition ease-in-out duration-300 hover:transform hover:-translate-y-1 focus:transform focus:-translate-y-1 selectable">{{ entry.title }}</a>
            {% else %}
              <a href="{{ entry.url | url }}" class="nav-link">{{ entry.title }}</a>
            {% endif %}
          {% endif %}
        {%- endfor %}
      </nav>
    </div>
  </div>

  {#  Mobile nav menu #}
  <div class="fixed overflow-scroll top-0 left-0 fixed w-screen h-screen z-50 bg-slate-900 pt-2 xs:hidden" x-show="$store.menu.open"
       x-data
       x-transition:enter="transition ease-out duration-300 transform"
       x-transition:enter-start="translate-x-full"
       x-transition:enter-end="translate-x-0"
       x-transition:leave="transition ease-in duration-300 transform"
       x-transition:leave-start="translate-x-0"
       x-transition:leave-end="translate-x-full"
  >
    <div class="fixed bottom-0 w-full -z-10" aria-hidden="true">
      {% include "waves/blue_bottom_waves_vertical1.njk" %}
    </div>
    <div class="flex justify-between items-center px-4 pt-1">
      {% include "components/sitetitle.njk" %}
      <button class="text-white border-2 rounded border-white" @click="$store.menu.closeMenu()" x-data>
        <span class="sr-only">Close Navigation</span>
        <svg xmlns="http://www.w3.org/2000/svg"
             aria-hidden="true"
             class="h-6 w-6"
             fill="none"
             viewBox="0 0 24 24"
             stroke="currentColor"
             stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

    </div>
    <nav class="grid grid-cols-1 gap-4 sm:gap-6 p-6 max-w-lg mx-auto mt-4 sm:mt-16" aria-label="primary">
      {%- for entry in navPages %}
        {% if not entry.hideOnMobile %}
          {% if entry.cta %}
            <a href="{{ entry.url | url }}"
               class="inline lg:block px-2 py-1 text-center bg-white text-lg font-bold rounded text-black transition ease-in-out duration-300 hover:transform hover:-translate-y-1 focus:transform focus:-translate-y-1 selectable">{{ entry.title }}</a>
          {% else %}
            <a href="{{ entry.url | url }}" class="nav-link">{{ entry.title }}</a>
          {% endif %}
        {% endif %}
      {%- endfor %}
    </nav>
  </div>
</div>
